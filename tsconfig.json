{
  "compilerOptions": {
    "target": "es6",
    "module": "es2022",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true
  }
}
